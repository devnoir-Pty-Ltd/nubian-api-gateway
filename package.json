{
  "name": "api-gateway",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "watch": "ts-node-dev --respawn index.dev.ts",
    "prepare": "husky install",
    "test": "echo ”[Husky] pre-commit"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "lint-staged": "^13.0.3",
    "module-alias": "^2.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "husky": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
